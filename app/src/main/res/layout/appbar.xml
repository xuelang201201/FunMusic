<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/red">

    <ImageView
        android:id="@+id/header_view_image_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="@null"
        android:padding="6dp"
        android:src="@drawable/ic_arrow_back"/>

    <TextView
        android:id="@+id/header_view_title_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_gravity="center_vertical"
        android:layout_toEndOf="@+id/header_view_image_view"
        android:layout_toLeftOf="@+id/header_view_more"
        android:layout_toRightOf="@+id/header_view_image_view"
        android:layout_toStartOf="@+id/header_view_more"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"/>

    <ImageView
        android:id="@+id/header_view_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="@null"
        android:padding="6dp"
        android:scaleX="0.9"
        android:scaleY="0.9"
        android:src="@drawable/ic_more"
        android:visibility="gone"/>

    <ImageView
        android:id="@+id/header_view_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/header_view_more"
        android:layout_toStartOf="@+id/header_view_more"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="@null"
        android:padding="6dp"
        android:scaleX="0.75"
        android:scaleY="0.75"
        android:src="@drawable/ic_search"
        android:visibility="gone"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginBottom="1dp"
        android:layout_marginLeft="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="1dp"
        android:layout_toEndOf="@+id/header_view_image_view"
        android:layout_toLeftOf="@+id/header_view_cancel"
        android:layout_toRightOf="@+id/header_view_image_view"
        android:layout_toStartOf="@+id/header_view_cancel">

        <EditText
            android:id="@+id/header_view_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:background="@drawable/selector_edittext"
            android:hint="@string/search_local"
            android:imeOptions="actionSearch"
            android:inputType="text"
            android:maxLines="1"
            android:paddingBottom="7dp"
            android:paddingEnd="25dp"
            android:paddingLeft="10dp"
            android:paddingRight="25dp"
            android:paddingStart="10dp"
            android:paddingTop="7dp"
            android:textColor="@color/light_black"
            android:textColorHint="#AAAAAA"
            android:textCursorDrawable="@drawable/color_cursor"
            android:textSize="14sp"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/header_view_clear"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="end|center_vertical"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@null"
            android:padding="10dp"
            android:src="@drawable/ic_close"
            android:visibility="gone"/>
    </FrameLayout>

    <TextView
        android:id="@+id/header_view_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:gravity="center_vertical"
        android:text="@string/cancel"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:visibility="gone"/>

</RelativeLayout>