<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dialog_sort_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/dialog_sort_text"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="@color/white"
        android:gravity="center"
        android:text="@string/sort_way"
        android:textColor="@color/black"
        android:textSize="16sp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="#CCCCCC"/>

    <LinearLayout
        android:id="@+id/dialog_sort_by_title"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/touch_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/dialog_sort_by_title_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:contentDescription="@null"
            android:scaleX="0.7"
            android:scaleY="0.7"
            android:src="@drawable/ic_arrow_right_dialog"
            android:visibility="invisible"/>

        <TextView
            android:id="@+id/dialog_sort_by_title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sort_by_title"
            android:textColor="@color/light_black"
            android:textSize="14sp"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="#CCCCCC"/>

    <LinearLayout
        android:id="@+id/dialog_sort_by_add_time"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/touch_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/dialog_sort_by_add_time_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:contentDescription="@null"
            android:scaleX="0.7"
            android:scaleY="0.7"
            android:src="@drawable/ic_arrow_right_dialog"
            android:visibility="invisible"/>

        <TextView
            android:id="@+id/dialog_sort_by_add_time_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add_time"
            android:textColor="@color/light_black"
            android:textSize="14sp"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:background="#CCCCCC"/>

    <LinearLayout
        android:id="@+id/dialog_sort_by_play_time"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@drawable/touch_bg"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/dialog_sort_by_play_time_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:contentDescription="@null"
            android:scaleX="0.7"
            android:scaleY="0.7"
            android:src="@drawable/ic_arrow_right_dialog"
            android:visibility="invisible"/>

        <TextView
            android:id="@+id/dialog_sort_by_play_time_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/play_time"
            android:textColor="@color/light_black"
            android:textSize="14sp"/>

    </LinearLayout>

</LinearLayout>