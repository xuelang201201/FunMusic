<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="43dp"
    android:background="?android:attr/selectableItemBackground">

    <com.charles.funmusic.widget.TintImageView
        android:id="@+id/header_play_all"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerInParent="true"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:scaleX="0.7"
        android:scaleY="0.7"
        android:src="@drawable/ic_play_bar_btn_play_normal" />

    <TextView
        android:id="@+id/header_play_all_text"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toEndOf="@+id/header_play_all"
        android:layout_toRightOf="@+id/header_play_all"
        android:gravity="center_vertical"
        android:text="@string/play_all"
        android:textColor="@color/black"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/header_play_all_number"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toEndOf="@+id/header_play_all_text"
        android:layout_toRightOf="@+id/header_play_all_text"
        android:gravity="center_vertical"
        android:singleLine="true"
        android:textSize="14sp"
        tools:ignore="RelativeOverlap" />

    <ImageView
        android:id="@+id/header_select"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:layout_gravity="center|clip_vertical"
        android:background="?android:attr/selectableItemBackground"
        android:contentDescription="@null"
        android:focusable="false"
        android:gravity="end"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:src="@drawable/ic_multiple" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.1dp"
        android:layout_alignParentBottom="true"
        android:background="#CCCCCC" />
</RelativeLayout>