<resources>

    <!-- Base application theme. -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/red</item>
        <item name="colorPrimaryDark">@color/red</item>
        <item name="colorAccent">@color/red</item>
        <item name="android:windowBackground">@null</item>
    </style>

    <style name="AppTheme.Text" parent="TextAppearance.AppCompat" />

    <style name="AppTheme" parent="AppBaseTheme"/>

    <style
        name="AnimationActivity"
        parent="@android:style/Animation.Activity">

        <item name="android:activityOpenEnterAnimation">@anim/fragment_slide_up</item>
        <item name="android:activityCloseEnterAnimation">@anim/fragment_slide_down</item>
        <item name="android:activityOpenExitAnimation">@anim/fragment_slide_up</item>
        <item name="android:activityCloseExitAnimation">@anim/fragment_slide_down</item>

    </style>

</resources>
